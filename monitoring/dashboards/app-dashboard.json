{
  "dashboard": {
    "id": null,
    "title": "Cloud Native Gauntlet - Complete System Dashboard",
    "description": "Comprehensive monitoring dashboard for the Cloud Native Gauntlet project",
    "tags": ["cloud-native", "gauntlet", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"task-api\"}",
            "legendFormat": "Task API"
          },
          {
            "expr": "up{job=\"keycloak\"}",
            "legendFormat": "Keycloak"
          },
          {
            "expr": "up{job=\"postgresql\"}",
            "legendFormat": "PostgreSQL"
          },
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"task-api\"}[5m])",
            "legendFormat": "Task API - {{method}} {{status}}"
          },
          {
            "expr": "rate(http_requests_total{job=\"keycloak\"}[5m])",
            "legendFormat": "Keycloak - {{method}} {{status}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"task-api\"}[5m]))",
            "legendFormat": "Task API - 95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"task-api\"}[5m]))",
            "legendFormat": "Task API - 50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"task-api\",status=~\"5..\"}[5m])",
            "legendFormat": "Task API - 5xx Errors"
          },
          {
            "expr": "rate(http_requests_total{job=\"task-api\",status=~\"4..\"}[5m])",
            "legendFormat": "Task API - 4xx Errors"
          },
          {
            "expr": "rate(http_requests_total{job=\"keycloak\",status=~\"5..\"}[5m])",
            "legendFormat": "Keycloak - 5xx Errors"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Database Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{job=\"postgresql\"}",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "pg_stat_database_tup_returned{job=\"postgresql\"}",
            "legendFormat": "Tuples Returned"
          },
          {
            "expr": "pg_stat_database_tup_fetched{job=\"postgresql\"}",
            "legendFormat": "Tuples Fetched"
          }
        ],
        "yAxes": [
          {
            "label": "Count",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{pod=~\"task-api-.*\"}",
            "legendFormat": "Task API Memory"
          },
          {
            "expr": "container_memory_usage_bytes{pod=~\"keycloak-.*\"}",
            "legendFormat": "Keycloak Memory"
          },
          {
            "expr": "container_memory_usage_bytes{pod=~\"postgres-.*\"}",
            "legendFormat": "PostgreSQL Memory"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"task-api-.*\"}[5m]) * 100",
            "legendFormat": "Task API CPU %"
          },
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"keycloak-.*\"}[5m]) * 100",
            "legendFormat": "Keycloak CPU %"
          },
          {
            "expr": "rate(container_cpu_usage_seconds_total{pod=~\"postgres-.*\"}[5m]) * 100",
            "legendFormat": "PostgreSQL CPU %"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "min": 0,
            "max": 100
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Linkerd Service Mesh Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(linkerd_proxy_request_total{deployment=\"task-api\"}[5m])",
            "legendFormat": "Task API Requests/sec"
          },
          {
            "expr": "rate(linkerd_proxy_request_total{deployment=\"keycloak\"}[5m])",
            "legendFormat": "Keycloak Requests/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(linkerd_proxy_request_duration_ms_bucket{deployment=\"task-api\"}[5m]))",
            "legendFormat": "Task API P95 Latency (ms)"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec / Latency (ms)",
            "min": 0
          }
        ],
        "xAxis": {
          "mode": "time"
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 9,
        "title": "Pod Status",
        "type": "table",
        "targets": [
          {
            "expr": "kube_pod_status_phase",
            "legendFormat": "{{namespace}}/{{pod}} - {{phase}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 40
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
